<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_profil_beschreibung"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilBeschreibungActivity" >

    <!-- Normales Layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <WebView
            android:id="@+id/beschreibung_anzeige"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Layout des Navigation Drawers -->

    <ListView
        android:id="@+id/nav_profil_beschreibung_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#383838"
        android:choiceMode="singleChoice"
        android:divider="#F8F8FF"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/my_list_selector"
        tools:ignore="RtlHardcoded" />

</android.support.v4.widget.DrawerLayout>