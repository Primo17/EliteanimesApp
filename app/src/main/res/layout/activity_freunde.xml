<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_freunde"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FreundeActivity" >

    <!-- Normales Layout -->

<LinearLayout
    android:id="@+id/freunde_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/freundesliste"
        android:listSelector="@drawable/my_list_selector"
        android:divider="@drawable/action_bar_bg"
        android:dividerHeight="1dp"
        />

</LinearLayout>

    <!-- Layout des Navigation Drawers -->

    <ListView
        android:id="@+id/nav_freunde_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#383838"
        android:choiceMode="singleChoice"
        android:divider="#F8F8FF"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/my_list_selector"
        tools:ignore="RtlHardcoded" />

</android.support.v4.widget.DrawerLayout>
