<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.btcdev.eliteanimesapp"
    android:versionCode="16"
    android:versionName="2.1.1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".EaApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:label="@string/title_activity_profil" >
        </activity>
        <activity
            android:name=".ui.activities.ProfileDescriptionActivity"
            android:label="@string/title_activity_profil_beschreibung" >
        </activity>
        <activity
            android:name=".ui.activities.FriendActivity"
            android:label="@string/title_activity_freunde" >
        </activity>
        <activity
            android:name=".ui.activities.UserProfileActivity"
            android:label="@string/title_activity_fremdes_profil" >
        </activity>
        <activity
            android:name=".ui.activities.CommentActivity"
            android:label="@string/title_activity_kommentar" >
        </activity>
        <activity
            android:name=".ui.activities.NewCommentActivity"
            android:label="@string/title_activity_neuer_kommentar"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.InfoActivity"
            android:label="@string/title_activity_info"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ui.activities.PrivateMessageActivity"
            android:label="@string/title_activity_pn" >
        </activity>
        <activity
            android:name=".ui.activities.NewPrivateMessageActivity"
            android:label="@string/title_activity_neue_pn"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".ui.activities.AccountSettingsActivity"
            android:label="@string/title_activity_kontoeinstellungen" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.AnimeListActivity"
            android:label="@string/title_activity_anime_list" >
        </activity>
        <activity
            android:name=".ui.activities.BoardActivity"
            android:label="@string/title_activity_foren" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.ThreadActivity"
            android:label="@string/title_activity_threads" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.PostActivity"
            android:label="@string/title_activity_posts" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.ui.activities.NewPostActivity"
            android:label="@string/title_activity_new_post" >
</activity>
    </application>

</manifest>