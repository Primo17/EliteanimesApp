<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.btcdev.eliteanimesapp"
    android:versionCode="16"
    android:versionName="2.1.1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/CustomActionBarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.ProfileActivity"
            android:label="@string/title_activity_profil" >
        </activity>
        <activity
            android:name=".gui.ProfileDescriptionActivity"
            android:label="@string/title_activity_profil_beschreibung" >
        </activity>
        <activity
            android:name=".gui.FriendActivity"
            android:label="@string/title_activity_freunde" >
        </activity>
        <activity
            android:name=".gui.UserProfileActivity"
            android:label="@string/title_activity_fremdes_profil" >
        </activity>
        <activity
            android:name=".gui.CommentActivity"
            android:label="@string/title_activity_kommentar" >
        </activity>
        <activity
            android:name=".gui.NewCommentActivity"
            android:label="@string/title_activity_neuer_kommentar"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.InfoActivity"
            android:label="@string/title_activity_info"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".gui.PrivateMessageActivity"
            android:label="@string/title_activity_pn" >
        </activity>
        <activity
            android:name=".gui.NewPrivateMessageActivity"
            android:label="@string/title_activity_neue_pn"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".gui.AccountSettingsActivity"
            android:label="@string/title_activity_kontoeinstellungen" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.AnimeListActivity"
            android:label="@string/title_activity_anime_list" >
        </activity>
        <activity
            android:name=".gui.BoardActivity"
            android:label="@string/title_activity_foren" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.ThreadActivity"
            android:label="@string/title_activity_threads" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.PostActivity"
            android:label="@string/title_activity_posts" >
        </activity>
        <activity
            android:name="de.btcdev.eliteanimesapp.gui.NewPostActivity"
            android:label="@string/title_activity_new_post" >
</activity>
    </application>

</manifest>