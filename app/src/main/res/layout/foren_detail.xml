<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/foren_detail"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/foren_detail_image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="3dp"
        android:contentDescription="@string/foren_detail_image"
        android:src="@drawable/forum_readall"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/foren_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/foren_detail_beschreibung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:gravity="left|center_vertical"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/foren_detail_anzahl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:gravity="left"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>