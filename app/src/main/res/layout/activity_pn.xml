<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_pn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PNActivity" >

    <!-- Normales Layout -->

    <LinearLayout
        android:id="@+id/pns_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/pnliste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:divider="@drawable/action_bar_bg"
            android:dividerHeight="1dp"
            android:listSelector="@drawable/my_list_selector"
            android:textColor="@color/abc_search_url_text_normal" />
    </LinearLayout>

    <!-- Layout des Navigation Drawers -->

    <ListView
        android:id="@+id/nav_pn_list"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#383838"
        android:choiceMode="singleChoice"
        android:divider="#F8F8FF"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/my_list_selector"
        tools:ignore="RtlHardcoded" />

</android.support.v4.widget.DrawerLayout>